<%= javascript_include_tag 'listings.js' %>
<div class="topbar">
  <div class="container">
    <div class="vertical-center">
      <%= link_to '東京', root_path %> > jobs > accounting
    </div>
  </div>
</div>
<div class="container">
  <div id="contact-area">
    <%= form_for @listing do |f| %>
    <%= f.label :タイトル %>
    <%= f.text_field :title %>
    <%= f.label :本文 %>
    <%= f.text_area :description %>
    <%= f.label :都市名 %>
     <%= f.text_field :city %>
  <p>
    <%= f.label :カテゴリー %>
    <%= f.select :category_id, Category.all.map{ |f|[f.name, f.id]} %>
  </p>
  <p>
    <%= f.label :サブ %>
    <%= f.select :subcategory_id, Subcategory.all.map{ |f|[f.name, f.id]}  %>
  </p>
    <%= f.label :都道府県 %>
    <%= f.text_field :state %>
    <%= f.label :郵便番号 %>
    <%= f.text_field :zipcode, class: "zip-width" %>
    <%= f.submit class: "create-button" %>
    <% end %>
  </div>
  
</div>